
<h1>Mechanic: <%= @mechanic.name %></h1>
<h3>Years of Experience: <%= @mechanic.experience %></h3>

<h3>Current rides they're working on:</h3>
<% @rides.each do |ride| %>
  <h3><%= ride.name %></h3>
<% end %>

<h5>Add a ride to their workload:</h5>

<%= form_tag "/mechanics/#{@mechanic.id}/edit", method: :patch do %>
  <%= label_tag "Ride id:" %>
  <%= text_field_tag :add_ride %><br>
  <%= submit_tag 'Submit' %>
<% end %>
